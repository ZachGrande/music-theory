<% content_for(:title) { "Music Theory - Master Music Theory with Interactive Quizzes" } %>

<div>
  <!-- Hero Section -->
  <section class="text-center py-16 mb-12">
    <h1 class="text-5xl font-bold mb-6 bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
      Master Music Theory
    </h1>
    <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8">
      Learn intervals, chords, scales, and more through interactive quizzes. 
      Track your progress and build your music theory knowledge.
    </p>
    <div class="flex justify-center gap-4 flex-wrap">
      <% if authenticated? %>
        <%= link_to "Go to Dashboard", dashboard_path, class: "inline-flex items-center justify-center px-8 py-3 text-base font-medium rounded-lg bg-indigo-500 text-white hover:bg-indigo-600 transition-all no-underline shadow-lg shadow-indigo-500/30" %>
        <%= link_to "Browse Quizzes", quizzes_path, class: "inline-flex items-center justify-center px-8 py-3 text-base font-medium rounded-lg border-2 border-indigo-500 text-indigo-600 hover:bg-indigo-50 transition-all no-underline" %>
      <% else %>
        <%= link_to "Start Learning Free", new_registration_path, class: "inline-flex items-center justify-center px-8 py-3 text-base font-medium rounded-lg bg-indigo-500 text-white hover:bg-indigo-600 transition-all no-underline shadow-lg shadow-indigo-500/30" %>
        <%= link_to "Sign In", new_session_path, class: "inline-flex items-center justify-center px-8 py-3 text-base font-medium rounded-lg border-2 border-indigo-500 text-indigo-600 hover:bg-indigo-50 transition-all no-underline" %>
      <% end %>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="mb-16">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <div class="bg-white rounded-xl p-6 shadow text-center">
        <span class="text-4xl font-bold text-indigo-600"><%= number_with_delimiter(@stats[:total_users]) %></span>
        <span class="block text-sm text-gray-500 mt-1">Learners</span>
      </div>
      <div class="bg-white rounded-xl p-6 shadow text-center">
        <span class="text-4xl font-bold text-indigo-600"><%= number_with_delimiter(@stats[:quizzes_completed]) %></span>
        <span class="block text-sm text-gray-500 mt-1">Quizzes Completed</span>
      </div>
      <div class="bg-white rounded-xl p-6 shadow text-center">
        <span class="text-4xl font-bold text-indigo-600"><%= number_with_delimiter(@stats[:questions_answered]) %></span>
        <span class="block text-sm text-gray-500 mt-1">Questions Answered</span>
      </div>
      <div class="bg-white rounded-xl p-6 shadow text-center">
        <span class="text-4xl font-bold text-indigo-600">ðŸ”¥ <%= @stats[:active_learners] %></span>
        <span class="block text-sm text-gray-500 mt-1">Active Streaks</span>
      </div>
    </div>
  </section>

  <!-- Sample Question Section -->
  <% if @sample_question.present? %>
    <section class="mb-16" data-controller="sample-quiz">
      <div class="bg-white rounded-xl p-8 shadow-lg max-w-2xl mx-auto">
        <div class="flex items-center gap-2 mb-6">
          <span class="text-xs font-semibold text-indigo-600 uppercase tracking-wide">Try it now</span>
          <span class="flex-1 h-px bg-gray-200"></span>
          <%= difficulty_badge(@sample_question.difficulty) %>
        </div>
        
        <h2 class="text-2xl font-bold mb-6"><%= @sample_question.content %></h2>
        
        <div class="space-y-3" data-sample-quiz-target="answers">
          <% @sample_question.answers.shuffle.each do |answer| %>
            <button
              type="button"
              class="w-full text-left px-5 py-4 rounded-lg border-2 border-gray-200 hover:border-indigo-300 hover:bg-indigo-50 transition-all font-medium"
              data-action="click->sample-quiz#selectAnswer"
              data-sample-quiz-correct-param="<%= answer.correct? %>"
              data-sample-quiz-target="answerButton"
            >
              <%= answer.content %>
            </button>
          <% end %>
        </div>
        
        <div data-sample-quiz-target="feedback" class="mt-6 hidden">
          <div data-sample-quiz-target="correctFeedback" class="hidden p-4 rounded-lg bg-green-100 text-green-800 border border-green-200">
            <strong>âœ“ Correct!</strong> Great job! Ready to learn more?
          </div>
          <div data-sample-quiz-target="incorrectFeedback" class="hidden p-4 rounded-lg bg-red-100 text-red-800 border border-red-200">
            <strong>âœ— Not quite.</strong> The correct answer is highlighted above.
          </div>
        </div>
        
        <div data-sample-quiz-target="cta" class="mt-6 pt-6 border-t border-gray-100 text-center hidden">
          <p class="text-gray-600 mb-4">Want more questions like this?</p>
          <% if authenticated? %>
            <%= link_to "Browse All Quizzes", quizzes_path, class: "inline-flex items-center justify-center px-6 py-2.5 text-sm font-medium rounded-lg bg-indigo-500 text-white hover:bg-indigo-600 transition-all no-underline" %>
          <% else %>
            <%= link_to "Create Free Account", new_registration_path, class: "inline-flex items-center justify-center px-6 py-2.5 text-sm font-medium rounded-lg bg-indigo-500 text-white hover:bg-indigo-600 transition-all no-underline" %>
          <% end %>
        </div>
      </div>
    </section>
  <% end %>

  <!-- Features Section -->
  <section class="mb-16">
    <h2 class="text-3xl font-bold text-center mb-10">Why Learn With Us?</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="bg-white rounded-xl p-6 shadow text-center">
        <div class="w-14 h-14 rounded-full bg-indigo-100 flex items-center justify-center mx-auto mb-4">
          <span class="text-2xl">ðŸŽ¯</span>
        </div>
        <h3 class="text-lg font-semibold mb-2">Targeted Practice</h3>
        <p class="text-gray-600 text-sm">Focus on specific topics like intervals, chords, scales, and key signatures.</p>
      </div>
      <div class="bg-white rounded-xl p-6 shadow text-center">
        <div class="w-14 h-14 rounded-full bg-indigo-100 flex items-center justify-center mx-auto mb-4">
          <span class="text-2xl">ðŸ”¥</span>
        </div>
        <h3 class="text-lg font-semibold mb-2">Streak Tracking</h3>
        <p class="text-gray-600 text-sm">Build daily habits and maintain your learning streak for consistent progress.</p>
      </div>
      <div class="bg-white rounded-xl p-6 shadow text-center">
        <div class="w-14 h-14 rounded-full bg-indigo-100 flex items-center justify-center mx-auto mb-4">
          <span class="text-2xl">ðŸ“Š</span>
        </div>
        <h3 class="text-lg font-semibold mb-2">Track Progress</h3>
        <p class="text-gray-600 text-sm">Monitor your scores, review past attempts, and see your improvement over time.</p>
      </div>
    </div>
  </section>

  <!-- Topics Preview -->
  <section class="mb-16">
    <h2 class="text-3xl font-bold text-center mb-10">Topics Covered</h2>
    <div class="flex flex-wrap justify-center gap-3">
      <% Question::TOPICS.each do |topic| %>
        <span class="px-4 py-2 bg-white rounded-full shadow text-sm font-medium text-gray-700 capitalize">
          <%= topic.gsub("_", " ") %>
        </span>
      <% end %>
    </div>
  </section>

  <!-- Tech Stack (for recruiters) -->
  <section class="mb-16 py-12 bg-white rounded-xl shadow">
    <h2 class="text-xl font-semibold text-center mb-6 text-gray-500">Built With</h2>
    <div class="flex flex-wrap justify-center gap-4 px-6">
      <span class="px-3 py-1.5 bg-red-100 text-red-800 rounded text-sm font-medium">Ruby on Rails 8</span>
      <span class="px-3 py-1.5 bg-cyan-100 text-cyan-800 rounded text-sm font-medium">Tailwind CSS 4</span>
      <span class="px-3 py-1.5 bg-yellow-100 text-yellow-800 rounded text-sm font-medium">Hotwire / Turbo</span>
      <span class="px-3 py-1.5 bg-purple-100 text-purple-800 rounded text-sm font-medium">Stimulus</span>
      <span class="px-3 py-1.5 bg-blue-100 text-blue-800 rounded text-sm font-medium">PostgreSQL</span>
      <span class="px-3 py-1.5 bg-green-100 text-green-800 rounded text-sm font-medium">Action Cable</span>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="text-center py-12">
    <h2 class="text-3xl font-bold mb-4">Ready to Start Learning?</h2>
    <p class="text-gray-600 mb-6">Join <%= number_with_delimiter(@stats[:total_users]) %> learners improving their music theory skills.</p>
    <% unless authenticated? %>
      <%= link_to "Get Started â€” It's Free", new_registration_path, class: "inline-flex items-center justify-center px-8 py-3 text-base font-medium rounded-lg bg-indigo-500 text-white hover:bg-indigo-600 transition-all no-underline shadow-lg shadow-indigo-500/30" %>
    <% else %>
      <%= link_to "Continue Learning", dashboard_path, class: "inline-flex items-center justify-center px-8 py-3 text-base font-medium rounded-lg bg-indigo-500 text-white hover:bg-indigo-600 transition-all no-underline shadow-lg shadow-indigo-500/30" %>
    <% end %>
  </section>
</div>
