<% content_for(:title) { "Sign In - Music Theory" } %>

<div class="auth-container">
  <div class="auth-card">
    <h1>Welcome Back</h1>
    <p class="subtitle">Sign in to continue your music theory journey</p>

    <%= form_with url: session_path, class: "auth-form" do |form| %>
      <div class="form-group">
        <%= form.label :email_address, "Email" %>
        <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", value: params[:email_address], class: "form-input" %>
      </div>

      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, required: true, autocomplete: "current-password", maxlength: 72, class: "form-input" %>
      </div>

      <%= form.submit "Sign In", class: "btn btn-primary btn-full" %>
    <% end %>

    <div class="auth-links">
      <%= link_to "Forgot password?", new_password_path %>
    </div>

    <p class="auth-footer">
      Don't have an account? <%= link_to "Sign up", new_registration_path %>
    </p>
  </div>
</div>
