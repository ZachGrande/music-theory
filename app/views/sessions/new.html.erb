<% content_for(:title) { "Sign In - Music Theory" } %>

<div class="min-h-[70vh] flex items-center justify-center">
  <div class="bg-white rounded-xl shadow-md p-10 w-full max-w-md">
    <h1 class="m-0 mb-2 text-2xl font-bold">Welcome Back</h1>
    <p class="text-gray-500 m-0 mb-6">Sign in to continue your music theory journey</p>

    <%= form_with url: session_path, class: "flex flex-col gap-4" do |form| %>
      <div class="flex flex-col gap-1.5">
        <%= form.label :email_address, "Email", class: "text-sm font-medium text-gray-700" %>
        <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", value: params[:email_address], class: "px-3.5 py-2.5 border border-gray-300 rounded-lg text-base transition-all focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/10" %>
      </div>

      <div class="flex flex-col gap-1.5">
        <%= form.label :password, class: "text-sm font-medium text-gray-700" %>
        <%= form.password_field :password, required: true, autocomplete: "current-password", maxlength: 72, class: "px-3.5 py-2.5 border border-gray-300 rounded-lg text-base transition-all focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/10" %>
      </div>

      <%= form.submit "Sign In", class: "w-full inline-flex items-center justify-center px-5 py-2.5 text-sm font-medium rounded-lg bg-indigo-500 text-white hover:bg-indigo-600 transition-all cursor-pointer border-none" %>
    <% end %>

    <div class="mt-4 text-center">
      <%= link_to "Forgot password?", new_password_path, class: "text-indigo-500 no-underline text-sm" %>
    </div>

    <p class="mt-6 text-center text-gray-500 text-sm">
      Don't have an account? <%= link_to "Sign up", new_registration_path, class: "text-indigo-500 no-underline font-medium" %>
    </p>
  </div>
</div>
