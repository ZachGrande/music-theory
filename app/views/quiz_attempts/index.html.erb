<% content_for(:title) { "Quiz History - Music Theory" } %>

<div>
  <header class="mb-8">
    <h1 class="m-0 mb-2 text-3xl font-bold">My Quiz History</h1>
    <p class="text-gray-500 m-0">Review your past quiz attempts</p>
  </header>

  <% if @quiz_attempts.any? %>
    <div class="flex flex-col gap-4">
      <% @quiz_attempts.each do |attempt| %>
        <div class="bg-white rounded-xl p-6 flex flex-col md:flex-row items-start md:items-center gap-6 shadow">
          <div class="flex-1">
            <h3 class="m-0 mb-2 font-semibold"><%= attempt.quiz.title %></h3>
            <div class="flex gap-3 items-center">
              <%= difficulty_badge(attempt.quiz.difficulty) %>
              <span class="text-gray-500 text-sm"><%= attempt.completed_at.strftime("%B %d, %Y at %I:%M %p") %></span>
            </div>
          </div>
          <div class="md:text-right">
            <span class="block text-2xl font-bold <%= score_color(attempt.score_percentage) %>">
              <%= attempt.score %>/<%= attempt.total_questions %>
            </span>
            <span class="text-sm <%= score_color(attempt.score_percentage) %>">
              <%= attempt.score_percentage %>%
            </span>
          </div>
          <div>
            <%= link_to "Review", quiz_quiz_attempt_path(attempt.quiz, attempt), class: "inline-flex items-center justify-center px-5 py-2.5 text-sm font-medium rounded-lg border border-gray-300 text-gray-700 bg-transparent hover:bg-gray-100 transition-all no-underline" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center p-12 bg-white rounded-xl">
      <h3 class="m-0 mb-2 font-semibold">No quizzes taken yet</h3>
      <p class="text-gray-500 m-0 mb-6">Start a quiz to see your history here.</p>
      <%= link_to "Browse Quizzes", quizzes_path, class: "inline-flex items-center justify-center px-5 py-2.5 text-sm font-medium rounded-lg bg-indigo-500 text-white hover:bg-indigo-600 transition-all no-underline" %>
    </div>
  <% end %>
</div>
