<% content_for :title, "Quiz Attempts - Admin - Music Theory" %>

<div class="mb-8">
  <h1 class="text-3xl font-bold text-gray-900">Quiz Attempts</h1>
  <p class="text-gray-600 mt-1">All quiz activity across the platform</p>
</div>

<div class="bg-white rounded-xl shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          User
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Quiz
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Score
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Status
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Started
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Completed
        </th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @quiz_attempts.each do |attempt| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 whitespace-nowrap">
            <%= link_to attempt.user.email_address, admin_user_path(attempt.user), class: "text-sm font-medium text-indigo-600 hover:text-indigo-800 no-underline" %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm font-medium text-gray-900"><%= attempt.quiz.title %></div>
            <div class="flex items-center gap-2 mt-0.5">
              <span class="text-xs text-gray-500"><%= attempt.quiz.category %></span>
              <%= difficulty_badge(attempt.quiz.difficulty) %>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <% if attempt.completed_at %>
              <span class="inline-block px-2.5 py-1 text-xs font-semibold rounded-full <%= score_color_class(attempt.score_percentage) %>">
                <%= attempt.score_percentage %>%
              </span>
              <span class="text-sm text-gray-500 ml-1">
                (<%= attempt.correct_answers_count %>/<%= attempt.quiz.question_count %>)
              </span>
            <% else %>
              <span class="text-sm text-gray-400">—</span>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <% if attempt.completed_at %>
              <span class="inline-block px-2 py-0.5 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                Completed
              </span>
            <% else %>
              <span class="inline-block px-2 py-0.5 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                In Progress
              </span>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= attempt.created_at.strftime("%b %d, %Y") %>
            <div class="text-xs text-gray-400"><%= attempt.created_at.strftime("%l:%M %p") %></div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <% if attempt.completed_at %>
              <%= attempt.completed_at.strftime("%b %d, %Y") %>
              <div class="text-xs text-gray-400"><%= attempt.completed_at.strftime("%l:%M %p") %></div>
            <% else %>
              <span class="text-gray-400">—</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<!-- Pagination -->
<div class="mt-6">
  <%== pagy_nav(@pagy) %>
</div>
