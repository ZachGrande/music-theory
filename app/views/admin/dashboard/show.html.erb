<% content_for :title, "Admin Dashboard - Music Theory" %>

<div class="mb-8">
  <h1 class="text-3xl font-bold text-gray-900">Admin Dashboard</h1>
  <p class="text-gray-600 mt-1">Overview of platform usage and activity</p>
</div>

<!-- Stats Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <div class="bg-white rounded-xl p-6 shadow">
    <div class="text-sm font-medium text-gray-500 uppercase tracking-wide">Total Users</div>
    <div class="text-3xl font-bold text-gray-900 mt-1"><%= @stats[:total_users] %></div>
    <div class="text-sm text-gray-500 mt-1">
      <span class="text-green-600 font-medium">+<%= @stats[:new_users_this_week] %></span> this week
    </div>
  </div>

  <div class="bg-white rounded-xl p-6 shadow">
    <div class="text-sm font-medium text-gray-500 uppercase tracking-wide">Quiz Attempts</div>
    <div class="text-3xl font-bold text-gray-900 mt-1"><%= @stats[:total_quiz_attempts] %></div>
    <div class="text-sm text-gray-500 mt-1">
      <%= @stats[:completed_quiz_attempts] %> completed
    </div>
  </div>

  <div class="bg-white rounded-xl p-6 shadow">
    <div class="text-sm font-medium text-gray-500 uppercase tracking-wide">Average Score</div>
    <div class="text-3xl font-bold text-gray-900 mt-1"><%= @stats[:average_score] %>%</div>
    <div class="text-sm text-gray-500 mt-1">
      across all attempts
    </div>
  </div>

  <div class="bg-white rounded-xl p-6 shadow">
    <div class="text-sm font-medium text-gray-500 uppercase tracking-wide">Active Streaks</div>
    <div class="text-3xl font-bold text-gray-900 mt-1"><%= @stats[:users_with_active_streak] %></div>
    <div class="text-sm text-gray-500 mt-1">
      users with streaks
    </div>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
  <!-- Recent Users -->
  <div class="bg-white rounded-xl shadow overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <h2 class="text-lg font-semibold text-gray-900">Recent Users</h2>
      <%= link_to "View All →", admin_users_path, class: "text-sm text-indigo-600 hover:text-indigo-800 font-medium no-underline" %>
    </div>
    <div class="divide-y divide-gray-200">
      <% @recent_users.each do |user| %>
        <div class="px-6 py-4 flex justify-between items-center">
          <div>
            <div class="font-medium text-gray-900"><%= user.email_address %></div>
            <div class="text-sm text-gray-500">Joined <%= time_ago_in_words(user.created_at) %> ago</div>
          </div>
          <%= link_to "View", admin_user_path(user), class: "text-sm text-indigo-600 hover:text-indigo-800 font-medium no-underline" %>
        </div>
      <% end %>
      <% if @recent_users.empty? %>
        <div class="px-6 py-4 text-gray-500 text-center">No users yet</div>
      <% end %>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="bg-white rounded-xl shadow overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <h2 class="text-lg font-semibold text-gray-900">Recent Quiz Activity</h2>
      <%= link_to "View All →", admin_quiz_attempts_path, class: "text-sm text-indigo-600 hover:text-indigo-800 font-medium no-underline" %>
    </div>
    <div class="divide-y divide-gray-200">
      <% @recent_attempts.each do |attempt| %>
        <div class="px-6 py-4">
          <div class="flex justify-between items-start">
            <div>
              <div class="font-medium text-gray-900"><%= attempt.user.email_address %></div>
              <div class="text-sm text-gray-500"><%= attempt.quiz.title %></div>
            </div>
            <div class="text-right">
              <span class="inline-block px-2.5 py-1 text-xs font-semibold rounded-full <%= score_color_class(attempt.score_percentage) %>">
                <%= attempt.score_percentage %>%
              </span>
              <div class="text-xs text-gray-500 mt-1">
                <%= time_ago_in_words(attempt.completed_at) %> ago
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <% if @recent_attempts.empty? %>
        <div class="px-6 py-4 text-gray-500 text-center">No quiz attempts yet</div>
      <% end %>
    </div>
  </div>
</div>
