<% content_for :title, "Users - Admin - Music Theory" %>

<div class="mb-8">
  <h1 class="text-3xl font-bold text-gray-900">Users</h1>
  <p class="text-gray-600 mt-1">All registered users on the platform</p>
</div>

<div class="bg-white rounded-xl shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Email
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Quizzes Completed
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Avg Score
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Current Streak
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Joined
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Actions
        </th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @users.each do |user| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="flex items-center">
              <div>
                <div class="text-sm font-medium text-gray-900">
                  <%= user.email_address %>
                </div>
                <% if user.admin? %>
                  <span class="inline-block px-2 py-0.5 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">
                    Admin
                  </span>
                <% end %>
              </div>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            <%= user.completed_quizzes_count %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <% if user.completed_quizzes_count > 0 %>
              <span class="inline-block px-2.5 py-1 text-xs font-semibold rounded-full <%= score_color_class(user.average_score) %>">
                <%= user.average_score %>%
              </span>
            <% else %>
              <span class="text-sm text-gray-400">â€”</span>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            <% if user.current_streak > 0 %>
              <span class="inline-flex items-center">
                ðŸ”¥ <%= user.current_streak %> day<%= user.current_streak == 1 ? "" : "s" %>
              </span>
            <% else %>
              <span class="text-gray-400">â€”</span>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= user.created_at.strftime("%b %d, %Y") %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm">
            <%= link_to "View", admin_user_path(user), class: "text-indigo-600 hover:text-indigo-800 font-medium no-underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<!-- Pagination -->
<div class="mt-6">
  <%== pagy_nav(@pagy) %>
</div>
