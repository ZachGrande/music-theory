<% content_for(:title) { "Reset Password - Music Theory" } %>

<div class="min-h-[70vh] flex items-center justify-center">
  <div class="bg-white rounded-xl shadow-md p-10 w-full max-w-md">
    <h1 class="m-0 mb-2 text-2xl font-bold">Update your password</h1>
    <p class="text-gray-500 m-0 mb-6">Enter your new password below</p>

    <% if flash[:alert] %>
      <div class="p-4 rounded-lg mb-4 bg-red-100 text-red-800 border border-red-200"><%= flash[:alert] %></div>
    <% end %>

    <%= form_with url: password_path(params[:token]), method: :put, class: "flex flex-col gap-4" do |form| %>
      <div class="flex flex-col gap-1.5">
        <%= form.label :password, "New Password", class: "text-sm font-medium text-gray-700" %>
        <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "Enter new password", maxlength: 72, class: "px-3.5 py-2.5 border border-gray-300 rounded-lg text-base transition-all focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/10" %>
      </div>

      <div class="flex flex-col gap-1.5">
        <%= form.label :password_confirmation, "Confirm Password", class: "text-sm font-medium text-gray-700" %>
        <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Repeat new password", maxlength: 72, class: "px-3.5 py-2.5 border border-gray-300 rounded-lg text-base transition-all focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/10" %>
      </div>

      <%= form.submit "Save", class: "w-full inline-flex items-center justify-center px-5 py-2.5 text-sm font-medium rounded-lg bg-indigo-500 text-white hover:bg-indigo-600 transition-all cursor-pointer border-none" %>
    <% end %>
  </div>
</div>
